<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.depaul.csc472.onlinequiz.addQuestionActivity"
    android:id="@+id/rl">

    <TextView android:text="Add Question" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addquetion" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ETQuestion"
        android:imeOptions="actionNext"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionA"
        android:layout_below="@+id/ETQuestion"
        android:layout_alignEnd="@+id/ETQuestion"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/addquetion"
        android:imeOptions="actionNext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="option 1"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/optionA"
        android:layout_toStartOf="@+id/optionA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="option 2"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/optionB"
        android:layout_toStartOf="@+id/optionA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="option 3"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/optionC"
        android:layout_toStartOf="@+id/optionB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="option 4"
        android:textSize="20sp"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/optionD"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionB"
        android:layout_alignEnd="@+id/optionA"
        android:layout_below="@+id/textView"
        android:imeOptions="actionNext"
        android:layout_alignStart="@+id/optionA" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionC"
        android:layout_below="@+id/optionB"
        android:layout_alignStart="@+id/optionB"
        android:imeOptions="actionNext"
        android:layout_alignEnd="@+id/optionB" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionD"
        android:imeOptions="actionNext"
        android:layout_below="@+id/optionC"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/optionC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer"
        android:textSize="20sp"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/Answer"
        android:layout_toStartOf="@+id/Answer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Answer"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        android:layout_below="@+id/optionD"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/optionD" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonAdd"
        android:onClick="newQuestion"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question Id"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/Qno"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Qno"
        android:layout_below="@+id/ETQuestion"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnDeleteQuestion"
        android:onClick="newQuestion"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonAdd" />

</RelativeLayout>
